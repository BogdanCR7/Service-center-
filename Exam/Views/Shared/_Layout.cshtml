<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Exam</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/lib/jquery-ajax-unobtrusive/dist/jquery.unobtrusive-ajax.min.js"></script>


</head>
<body>
	<div class="box">
		<div class="main">
			<div class="header">
				<div class="logo">
					Repair Service
				</div>
				<div class="profile">
					<div class="icon">
						<img src="~/clerk-with-tie.png">

					</div>
					<div class="info">
						<div class="name">
							Gravid Thomson
						</div>
						<div class="position">
							Genius
						</div>
					</div>
					<div class="arr">
						<p> <i class="arrow down"></i></p>
						<div id="dropdown" class="dropdown-content" style="background-color: #514390;">
							<div style="margin-top: 10px; margin-left: 10px;">
								<div style="display:flex;flex-direction:row;">
									<img src="~/clerk-with-tie.png" style="height: 25px; margin-top: auto; margin-bottom: auto;" /><a asp-area="" asp-controller="Orders" asp-action="Index" style="color:white"><h6 style="font-weight:500; font-size:16px;">Profile</h6></a>
								</div>
								<div style="display:flex;flex-direction:row; margin-top:1px;">
									<img src="~/logout.png" style="height:25px; margin-left:3px; margin-top:auto; margin-bottom:auto;"><a asp-area="" asp-controller="Home" asp-action="Logout" style="color:white"><h6 style="font-weight:500; font-size:16px;">Logout</h6></a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="content ">
				<div class="menudiv ">
					<nav class="menu ">
						@if (User.IsInRole("Admin")) {
						<div class="menuitem ">
							<img src="~/clerk-with-tie.png " />
							<a asp-area="" asp-controller="Home" asp-action="Index">Masters</a>
						</div>
                        }
						<div class="menuitem ">
							<img src="~/shopping-list.png " />
							<a asp-area="" asp-controller="Orders" asp-action="Index">Orders </a>
						</div>
						<div class="menuitem ">
							<img src="~/users.png ">
							<a asp-area="" asp-controller="Clients" asp-action="Index">Clients</a>
						</div>
						<div class="menuitem ">
							<img src="~/settings.png ">
							<a asp-area="" asp-controller="Goods" asp-action="Index">Goods</a>
						</div>
						<div class="menuitem ">
							<img src="~/grid.png ">
							<a asp-area="" asp-controller="Categories" asp-action="Index">Categories</a>
						</div>
						<div class="menuitem ">
							<img src="~/logout.png ">
							<a asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
						</div>
					</nav>
				</div>
				<div class="renderbody ">
					<div style="max-width:1200px;"class="container">
						@RenderBody()
					</div>
				</div>

			</div>
		</div>
	</div>



	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
